    private void jtbl_comunesMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jtbl_comunesMouseClicked
        // TODO add your handling code here:
        if (evt.getButton()==1){
            int fila = jtbl_comunes.getSelectedRow();
            try{
                btn_modificar.setEnabled(true);
                btn_eliminar.setEnabled(true);
                btn_guardar.setEnabled(false);
                String sql = "SELECT * FROM comunes WHERE codigo='"+jtbl_comunes.getValueAt(fila, 0)+"'";
                sent = cn.createStatement();
                ResultSet rs = sent.executeQuery(sql);
                rs.next();
                
                Integer mes = Integer.parseInt(rs.getString("total_mes"));
                Integer saldo_ant = Integer.parseInt(rs.getString("saldo_anterior"));
                Integer suma = mes + saldo_ant;
                String total = Integer.toString(suma);
                
                txt_codigo.setText(rs.getString("codigo"));
                txt_rut.setText(rs.getString("rut"));
                txt_empresa.setText(rs.getString("empresa"));
                jcbx_tipo.setSelectedItem(rs.getString("tipo"));
                txt_consumo.setText(rs.getString("consumo"));
                jcbx_mes.setSelectedItem(rs.getString("mes"));
                jcbx_año.setSelectedItem(rs.getString("ano"));
                jdt_vencimiento.setDate(rs.getDate("vencimiento"));
                txt_mes.setText(rs.getString("total_mes"));
                jlbl_total.setText(total);
                txt_saldoant.setText(rs.getString("saldo_anterior"));
                
                jlbl_actividad.setText("Datos Traslados a Campos, modifique y aprete boton Modificar");
            }catch (Exception ex) {
                ex.printStackTrace();

            }
        }
    }//GEN-LAST:event_jtbl_comunesMouseClicked


