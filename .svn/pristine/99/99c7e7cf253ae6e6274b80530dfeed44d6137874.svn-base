    private void llenar() {
        try {
            cn = conexion.connect();
            String [] titulos = {"Codigo","Rut","Empresa","Tipo","Consumo","Mes","Año","Vencimiento","Total Mes","Saldo Anterior"};
            String sql = "SELECT codigo, rut, empresa, tipo, consumo, mes, ano, vencimiento, total_mes, saldo_anterior FROM comunes";
            model = new DefaultTableModel(null, titulos);
            sent = cn.createStatement();
            ResultSet rs = sent.executeQuery(sql);
            String [] fila = new String [10];
            while (rs.next()){
                fila[0]=rs.getString("codigo");
                fila[1]=rs.getString("rut");
                fila[2]=rs.getString("empresa");
                fila[3]=rs.getString("tipo");
                fila[4]=rs.getString("consumo");
                fila[5]=rs.getString("mes");
                fila[6]=rs.getString("ano");
                fila[7]=rs.getString("vencimiento");
                fila[8]=rs.getString("total_mes");
                fila[9]=rs.getString("saldo_anterior");
            model.addRow(fila);
            }
            jtbl_comunes.setModel(model);
        }catch (Exception e) {
            e.printStackTrace();
        }
    }
    
