    private void btn_guardarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btn_guardarActionPerformed
        // TODO add your handling code here:
        if (txt_codigo.getText().isEmpty()) {
            jlbl_actividad.setText("Ingresa el Codigo");
        }
        else if (txt_rut.getText().isEmpty()) {
            jlbl_actividad.setText("Ingresa el Rut");
        }
        else if (txt_empresa.getText().isEmpty()) {
            jlbl_actividad.setText("Ingresa la Empresa");
        }
        else if (txt_consumo.getText().isEmpty()) {
            jlbl_actividad.setText("Ingresa el Consumo");
        }
        else if (txt_mes.getText().isEmpty()) {
            JOptionPane.showMessageDialog(null,"Ingresa el Total de Mes", "error",JOptionPane.ERROR_MESSAGE);
        }
        else if (jdt_vencimiento.getDate() == null) {
            JOptionPane.showMessageDialog(null, "Ingresa la fecha de Vencimiento", "error",JOptionPane.ERROR_MESSAGE);
        }
        else if (txt_saldoant.getText().isEmpty()) {
            JOptionPane.showMessageDialog(null,"Ingresa el Saldo Anterior si existe","error",JOptionPane.ERROR_MESSAGE);
        }
        else {
            if (JOptionPane.showConfirmDialog(null,"Revise sus Datos", "Confirmar",1)==0){
                try {
                    PreparedStatement pps = (PreparedStatement) cn.prepareStatement("INSERT INTO comunes (codigo, rut, empresa, tipo, consumo, mes, ano, vencimiento, total_mes, saldo_anterior) values (?,?,?,?,?,?,?,?,?,?)", Statement.RETURN_GENERATED_KEYS);
                    pps.setString(1, txt_codigo.getText());
                    pps.setString(2, txt_rut.getText());
                    pps.setString(3, txt_empresa.getText());
                    String value1 = jcbx_tipo.getSelectedItem().toString();
                    pps.setString(4, value1);
                    pps.setString(5, txt_consumo.getText());
                    String value2 = jcbx_mes.getSelectedItem().toString();
                    pps.setString(6, value2);
                    String value3 = jcbx_año.getSelectedItem().toString();
                    pps.setString(7, value3);
                    pps.setString(8, ((JTextField)jdt_vencimiento.getDateEditor().getUiComponent()).getText());
                    pps.setString(9, txt_mes.getText());
                    pps.setString(10, txt_saldoant.getText());
                    pps.executeUpdate();
                    jlbl_actividad.setText("Datos Guardados");
                } catch (SQLException ex) {
                    JOptionPane.showMessageDialog(null, ex);
                }
            }
        }
    }//GEN-LAST:event_btn_guardarActionPerformed

