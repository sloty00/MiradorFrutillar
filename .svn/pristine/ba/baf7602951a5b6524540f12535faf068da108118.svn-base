    private void jtbl_mod_usuarioMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jtbl_mod_usuarioMouseClicked
        // TODO add your handling code here:
            if (evt.getButton()==1){
            int fila = jtbl_mod_usuario.getSelectedRow();
            try{
                habilitar_Ingreso();
                String sql = "SELECT rut, username, contrasena, funcion FROM user WHERE rut='"+jtbl_mod_usuario.getValueAt(fila, 0)+"'";
                sent = cn.createStatement();
                ResultSet rs = sent.executeQuery(sql);
                rs.next();
                txt_rut_m.setText(rs.getString("rut"));
                txt_usuario_m.setText(rs.getString("username"));
                txt_contrasena_m.setText(rs.getString("contrasena"));
                jcbx_funcion_m.setSelectedItem(rs.getString("funcion"));
                jlbl_actividad1.setText("Datos Traslados a Campos, cambielos y aprete boton Modificar");
            }catch (Exception ex) {
                ex.printStackTrace();
            }

        }
    }//GEN-LAST:event_jtbl_mod_usuarioMouseClicked

    private void jtbl_ing_usuarioMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jtbl_ing_usuarioMouseClicked
        // TODO add your handling code here:
        if (evt.getButton()==1){
            int fila = jtbl_ing_usuario.getSelectedRow();
            try{
                habilitar_Ingreso();
                String sql = "SELECT rut, cargo FROM empleado WHERE rut='"+jtbl_ing_usuario.getValueAt(fila, 0)+"'";
                sent = cn.createStatement();
                ResultSet rs = sent.executeQuery(sql);
                rs.next();
                txt_rut_i.setText(rs.getString("rut"));
                jcbx_funcion_i.setSelectedItem(rs.getString("cargo"));
                jlbl_actividad.setText("Datos Traslados a Campos, rellene y aprete boton Guardar");
            }catch (Exception ex) {
                ex.printStackTrace();
            }

        }
    }//GEN-LAST:event_jtbl_ing_usuarioMouseClicked


