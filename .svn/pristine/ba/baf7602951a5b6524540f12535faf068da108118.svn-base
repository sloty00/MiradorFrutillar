    private void btn_guardar_iActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btn_guardar_iActionPerformed
        // TODO add your handling code here:
       
        if (txt_usuario_i.getText().isEmpty()) {
            jlbl_actividad.setText("Ingrese el Nombre de Usuario");
        }
        else if (txt_contrasena_i.getText().isEmpty()) {
            jlbl_actividad.setText("Ingrese la Contraseña de Usuario");
        }
        else {
            if (JOptionPane.showConfirmDialog(null,"Revise sus datos", "Confirmar",1)==0){
                try {
                    com.mysql.jdbc.PreparedStatement pps = (com.mysql.jdbc.PreparedStatement) cn.prepareStatement("INSERT INTO user (rut, username, contrasena, funcion) values (?,?,?,?)", Statement.RETURN_GENERATED_KEYS);
                    pps.setString(1, txt_rut_i.getText());
                    pps.setString(2, txt_usuario_i.getText());
                    pps.setString(3, txt_contrasena_i.getText());
                    String value1 = jcbx_funcion_i.getSelectedItem().toString();
                    pps.setString(4, value1);
                    pps.executeUpdate();
                    jlbl_actividad.setText("Guardado, Actualize los datos de la tabla");
                } catch (SQLException ex) {
                    JOptionPane.showMessageDialog(null, ex);
                }
            }

        }
    }//GEN-LAST:event_btn_guardar_iActionPerformed

