    void llenar_ingreso_usu(){
        try {
            cn = conexion.connect();
            String [] titulos = {"Rut","Nombres","Apellidos","Cargo"};
            String sql = "select rut, nombres, apellidos, cargo from empleado";
            model = new DefaultTableModel(null, titulos);
            sent = cn.createStatement();
            ResultSet rs = sent.executeQuery(sql);
            String [] fila = new String [4];
            while (rs.next()){
                //fila[0]=rs.getString("id");
                fila[0]=rs.getString("rut");
                fila[1]=rs.getString("nombres");
                fila[2]=rs.getString("apellidos");
                fila[3]=rs.getString("cargo");
                
            model.addRow(fila);
            }
            jtbl_ing_usuario.setModel(model);
        }catch (Exception e) {
            e.printStackTrace();
        }
    }
    
    void llenar_modificar_usu(){
        try {
            cn = conexion.connect();
            String [] titulos = {"Rut","Username","Password","Funcion"};
            String sql = "select rut, username, contrasena, funcion from user";
            model = new DefaultTableModel(null, titulos);
            sent = cn.createStatement();
            ResultSet rs = sent.executeQuery(sql);
            String [] fila = new String [4];
            while (rs.next()){
                //fila[0]=rs.getString("id");
                fila[0]=rs.getString("rut");
                fila[1]=rs.getString("username");
                fila[2]=rs.getString("contrasena");
                fila[3]=rs.getString("funcion");
                
            model.addRow(fila);
            }
            jtbl_mod_usuario.setModel(model);
        }catch (Exception e) {
            e.printStackTrace();
        }
    }
        
    

